<h1>SpaceBnB</h1>
<h2><span data-controller="typed-js"></span></h2>
<div class="cards">
  <% @planets.each do |planet| %>
    <div class="card-planet">
      <%= link_to planet_path(planet) do %>
      <% if planet.photo.attached? %>
        <%= image_tag planet.photo, class: "image_top_card" %>
      <% else %>
        <img class="default_top_card" src="https://images.unsplash.com/photo-1545156521-77bd85671d30?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1180&q=80" alt="">
      <% end %>
        <h2> <%= link_to planet.name, planet_path(planet), class: "planet-name"%></h2>
        <p> <%= planet.location %></p>
        <div class="price">
          <p> <%= planet.price_per_night %> â‚¬/nuit </p>
        </div>
        <div class="planet-description">
          <p> <%= planet.description %> </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
